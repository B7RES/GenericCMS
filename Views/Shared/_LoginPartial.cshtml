@using Microsoft.AspNetCore.Identity

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if(SignInManager.IsSignedIn(User)){
    <li class="nav-item">
        <a class="nav-link" href="#">Hello, @UserManager.GetUserName(User)</a>
    </li>
    <li class="nav-item">
            <a asp-controller="Auth" asp-action="Logout" class="nav-link">Logout</a>
    </li>
    }
    else{
    <li class="nav-item">
            <a asp-controller="Auth" asp-action="Register" class="nav-link">Register</a>
    </li>
    <li class="nav-item">
            <a asp-controller="Auth" asp-action="Login" class="nav-link">Login</a>
    </li>
    }
</ul>